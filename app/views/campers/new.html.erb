<h1> New Camper Form </h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |er| %>
        <p> <%= er %> </p>
        <% end %>
    <% end %>


<%= form_for @camper do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :age %><br>
    <%= f.number_field :age %><br>

    <%= f.submit %>

<% end %>


